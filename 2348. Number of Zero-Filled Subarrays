

class Solution{
	long no_of_subarrays(int N, int [] arr) {
		//Write your code here
		long count=0;
		long ans=0;
		for(int i=0;i<arr.length;i++)
		{
		   
		     if(arr[i]==0)
	         {
	                ans+=++count;
	         }
	         else
	         {
	             count=0;
	         }
		        
		}
		return ans;
	}
}
